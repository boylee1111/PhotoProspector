@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/search")
@Styles.Render("~/Content/search")

<h1>Search</h1>

<div id="search_container">
    <div id="search_contiditon_container">
        <div id="search_condition">
            <label id="alias_label" for="alias_input">Alias*</label>
            <input id="alias_input" name="alias_input" type="text" maxlength="25" />

            <div id="img_upload_box" class="box__input box">
                <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43"><path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"></path></svg>
                <input class="box__file" type="file" name="upload_images_input" id="upload_images_input" data-multiple-caption="{count} files selected" multiple />
                <label id="files_label" for="upload_images_input">Choose files</label>
                <div id="box__uploading">Uploading…</div>
            </div>

            <button class="box__button" id="search_submit_button">Search</button>
        </div>
    </div>
</div>