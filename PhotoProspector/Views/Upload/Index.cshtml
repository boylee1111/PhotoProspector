@{
    ViewBag.Title = "Photo Prospector";
}
@Scripts.Render("~/bundles/jqueryform")
@Scripts.Render("~/bundles/upload")
@Scripts.Render("~/bundles/jqueryredirect")
@Styles.Render("~/Content/upload")
@Styles.Render("~/Content/Control/uploading")

<div id="uploading-container">
    <div id="uploading-section">
        <div id="upload-circular" class="loading"></div>
        <div id="upload-control">
            <div>G</div>
            <div>N</div>
            <div>I</div>
            <div>D</div>
            <div>A</div>
            <div>O</div>
            <div>L</div>
            <div>P</div>
            <div>U</div>
        </div>
    </div>
    <div id="logo-section">
        <div id="logo-section-cover">
            <div id="cover-top"></div>
            <div id="cover-description">
                <p>Give us a photo.</p>
                <p>We tell you who is him/her.</p>
            </div>
            <div id="cover-middle"></div>
            <div id="photo-upload-box">
                @using (Ajax.BeginForm("Upload", "Upload", new AjaxOptions() { HttpMethod = "POST" }, new { enctype = "multipart/form-data", id = "photo-upload-form" }))
                {
                    @Html.AntiForgeryToken()
                    <input id="file" type="file" name="files" class="inputfile inputfile-circle" />
                    <label for="file">
                        <figure>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                            </svg>
                        </figure>
                    </label>
                }
                <div class="upload-progress col-md-6 hidden">
                    <div class="upload-percent-value pull-left">0%</div>
                    <div class="upload-percent-bar pull-left"></div>
                </div>
                <div id="upload-status"></div>
            </div>
        </div>
    </div>
</div>
<div id="photo-crop-box" class="hidden">
    <p>
        <img src="" id="crop-photo-target" alt="Uploaded image" />
        <div id="preview-pane" class="hidden">
            <div class="preview-container">
                <img src="" class="jcrop-preview" alt="Preview" />
            </div>
        </div>
    </p>
</div>
